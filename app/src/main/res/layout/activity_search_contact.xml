<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:backgroundTint="#A8C6C4">

    <TextView
        android:id="@+id/textViewSearchContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search For Contact"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/textGreen"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        android:typeface="sans"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="37dp" />

    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/search"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="103dp" />

    <ScrollView
        android:layout_width="291dp"
        android:layout_height="271dp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="177dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/buttonCreateNewContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buttonRed"
        android:text="@string/new_contact"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="482dp" />

    <ImageButton
        android:id="@+id/imageButtonBackArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A7C5C3"
        app:srcCompat="@drawable/angle_left"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="571dp" />

    <ImageButton
        android:id="@+id/imageViewSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#A7C5C3"
        app:srcCompat="@drawable/settings"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="568dp" />


</androidx.constraintlayout.widget.ConstraintLayout>